<div class="trips">
  <h3 class="text-center">Trips</h3>

  <% @trips.each do |trip| %>
    <% if trip.user_id == session[:id] %>
      <div class="text-center"><a href="/trip/<%=trip.id%>"><%=trip.name%></a></div>
    <% end %>
  <% end %>

  <%= form_tag '/new_trip', method: 'get' do %>
    <button class="btn btn-success">Create Trip</button>
  <% end %>

</div>
