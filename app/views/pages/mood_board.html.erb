<%= render 'dashboard_card_template' %>

<script>
$(document).ready(function() {

  var user_id = <%=session[:id] %>;
  var cards_id = []; // stores card ids for the mood board
  // <%= @user_id.to_json %>;

  console.log(user_id);

  $.ajax({
    url: '/api/moods/',
    method: 'GET'
  }).done(function(data){
    console.log(data)


    for(var i=0; i<data.length; i++){
      if (data[i].user_id === user_id){
        cards_id.push(data[i].card_id)

        // cards.push(new Card(data[i]));
      };
    };


  });

  $.ajax({
    url: '/api/cards/',
    data: {cards_id: cards_id},
    method: 'GET'
  }).done(function(data){
    console.log(data);

    var cards = [];

    for(var i=0; i<data.length; i++){
      if (data[i].user_id === user_id){
        console.log('test');
        cards.push(new Card(data[i]));
      };
    };


    cards.forEach(function(card){
      var view = new DashboardCardItemView({model: card});
      $('.cards_container').append(view.render().el);
    });



  });


});

</script>
